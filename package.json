{
  "name": "@stevent-team/react-zoom-form",
  "version": "1.0.0",
  "description": "React forms powered by Zod",
  "keywords": [
    "react",
    "hooks",
    "zoom",
    "forms",
    "zod"
  ],
  "repository": "https://github.com/stevent-team/react-zoom-form",
  "author": "Stevent Team (https://stevent.club)",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint lib test example --max-warnings 0",
    "ci:release": "yarn build && yarn changeset publish"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/react-zoom-form.js",
  "main": "./dist/react-zoom-form.umd.cjs",
  "types": "./dist/react-zoom-form.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-zoom-form.js",
      "require": "./dist/react-zoom-form.umd.cjs"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "zod": ">=3.9.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitejs/plugin-react": "^4.0.2",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "happy-dom": "^10.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.5",
    "vite": "^4.4.2",
    "vite-plugin-dts": "^3.2.0",
    "vitest": "^0.33.0",
    "wouter": "^2.11.0",
    "zod": "^3.21.4"
  }
}
